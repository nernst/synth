<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GoSynth.ViewModels"
             x:DataType="viewmodel:SoundViewModel"
             x:Class="GoSynth.SoundPage"
             Title="Sound Formula Editor">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *, Auto">

        <Editor Grid.Row="0" Text="{Binding Name}" Placeholder="Sound Name" />

        <Editor Grid.Row="1" Text="{Binding Equation}" Placeholder="Equation" />

        <Editor Grid.Row="2" Text="{Binding Duration}" Placeholder="Duration" />

        <Button
            Grid.Row="3"
            x:Name="BtnPlay"
            Text="Play"
            SemanticProperties.Hint="Play Synthesized sound"
            Command="{Binding PlayCommand}"
            HorizontalOptions="Center" />

        <HorizontalStackLayout Grid.Row="5" Padding="5">
            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
        </HorizontalStackLayout>
        
    </Grid>
</ContentPage>